# list command
if [ "$OSTYPE" == linux-gnu ]; then
  alias ls='ls -Fh --color=auto --group-directories-first'
  alias la='ls -A'
  alias ll='ls -l'
  alias lla='ls -Al'
  alias lr='ls -R'
else
  alias ls='gls -Fh --color=auto --group-directories-first'
  alias la='gls -A'
  alias ll='gls -l'
  alias lla='gls -Al'
  alias lr='gls -R'
fi

# change directory command
alias ..='cd ..'
alias ...='cd ../..'

# common commands
alias cp='cp -iv'
alias mv='mv -iv'
alias ln='ln -iv'
alias mkdir='mkdir -v'
alias rm='rm -i'
alias rmf='rm -rf'

# shortcuts
alias c='clear'
alias g='git'
alias v='nvim'
alias q='exit'

# bookmarks
#alias pro='cd ~/Documents/coding/'
